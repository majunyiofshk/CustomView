<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mjy.customview"
    >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".touch.GestureDetectorActivity"/>
        <activity android:name=".touch.ScaleGestureDetectorActivity"/>
        <activity android:name=".touch.ImageViewActivity"/>
        <activity
            android:name=".picture.PictureActivity"
            android:theme="@style/PictureActivityTheme"
            android:hardwareAccelerated="false"
            />
        <activity
            android:name=".touch.MatrixActivity"
            android:hardwareAccelerated="false"
            />
        <activity android:name=".view.ScrollViewActivity"/>
    </application>

</manifest>