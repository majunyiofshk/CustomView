<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mjy.customview"
    >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".gesture.GestureDetectorActivity"/>
        <activity android:name=".gesture.ScaleGestureDetectorActivity"/>
        <activity android:name=".image.ImageViewActivity"/>
        <activity
            android:name=".picture.PictureActivity"
            android:theme="@style/PictureActivityTheme"
            android:hardwareAccelerated="false"
            />
        <activity
            android:name=".matrix.MatrixActivity"
            android:hardwareAccelerated="false"
            />
        <activity android:name=".scrollview.ScrollViewActivity"/>
        <activity android:name=".scroller.ScrollerActivity"/>
        <activity android:name=".RulerActivity"/>
        <activity android:name=".motion.MotionEventActivity"/>
        <activity android:name=".recycler.RecyclerViewActivity"/>
        <activity android:name=".drag.DragViewActivity"/>
        <activity android:name=".recycler.MultiActivity"/>
        <activity android:name=".draw.DrawActivity"
            android:hardwareAccelerated="false"
            />
        <activity android:name=".window.WindowActivity"/>
        <activity android:name=".refresh.RefreshActivity"/>
        <activity android:name=".nested.NestedActivity"/>
    </application>

</manifest>